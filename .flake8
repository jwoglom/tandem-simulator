[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*.py:F401
    # Stub files from Milestone 1 - will be completed in future milestones
    tandem_simulator/authentication/*.py:F401
    tandem_simulator/ble/*.py:F401,F541,E501
    tandem_simulator/state/*.py:F401
    tandem_simulator/handlers/*.py:F401
    tandem_simulator/utils/*.py:F401
